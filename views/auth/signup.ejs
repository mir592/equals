<!-- views/auth/signup.ejs -->
<h2>Signup</h2>

<form action="/signup" method="POST" id="form-container"  enctype="multipart/form-data">
  <label for="name">Name</label>
  <input id="name" type="text" name="name" placeholder="JonSnow">
  <br><br>
  <label for="alias">Alias</label>
  <input id="alias" type="text" name="alias" placeholder="JS">
  <br><br>
  <label for="email">Email</label>
  <input id="email" type="email" name="email" placeholder="Your email">
  <br><br>
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br><br>
  <label for="photo">Photo</label>
  <input id="photo" type="file" name="photo">
  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>
